---
import AdminForm from "../../../../../layouts/AdminForm.astro";
import { getLodgeBySlug } from "../../../../../lib/db";

const lodgeSlug = Astro.params.lodge!;
const env = Astro.locals.runtime.env;

const lodge = await getLodgeBySlug(env.DB, lodgeSlug);
if (!lodge) return Astro.redirect("/", 302);

const id = Number(new URL(Astro.request.url).searchParams.get("id"));
if (!id) return Astro.redirect(`/lodges/admin/${lodgeSlug}`, 302);

const entry = await env.DB.prepare("SELECT * FROM pages WHERE id = ? AND lodge_id = ?").bind(id, lodge.id).first<Record<string, unknown>>();
if (!entry) return Astro.redirect(`/lodges/admin/${lodgeSlug}`, 302);

let message = "";
let isError = false;

if (Astro.request.method === "POST") {
  const form = await Astro.request.formData();
  if (form.get("_action") === "delete") {
    await env.DB.prepare("DELETE FROM pages WHERE id = ? AND lodge_id = ?").bind(id, lodge.id).run();
    return Astro.redirect(`/lodges/admin/${lodgeSlug}`, 302);
  }
  try {
    const now = new Date().toISOString();
    await env.DB.prepare(
      "UPDATE pages SET title=?,content=?,meta_description=?,updated_at=? WHERE id=? AND lodge_id=?"
    ).bind(
      form.get("title")?.toString() ?? "",
      form.get("content")?.toString() ?? "",
      form.get("meta_description")?.toString() || null,
      now, id, lodge.id,
    ).run();
    message = "Page updated.";
  } catch (e: unknown) {
    isError = true;
    message = `Error: ${e instanceof Error ? e.message : String(e)}`;
  }
}
---

<AdminForm title="Edit Page" lodgeSlug={lodgeSlug}>
  {message && <div class={isError ? "error-msg" : "success-msg"}>{message}</div>}
  <form method="POST">
    <div class="field">
      <label>Title</label>
      <input type="text" name="title" value={String(entry.title ?? "")} required />
    </div>
    <div class="field">
      <label>Slug <span class="hint">(read-only URL path)</span></label>
      <input type="text" value={String(entry.slug ?? "")} disabled />
    </div>
    <div class="field">
      <label>Content <span class="hint">(Markdown)</span></label>
      <textarea name="content" rows="20">{String(entry.content ?? "")}</textarea>
    </div>
    <div class="field">
      <label>Meta Description <span class="hint">(optional, for SEO)</span></label>
      <input type="text" name="meta_description" value={String(entry.meta_description ?? "")} />
    </div>
    <div class="actions">
      <button type="submit" class="btn primary">Save Changes</button>
      <a href={`/lodges/admin/${lodgeSlug}`} class="btn secondary">Cancel</a>
      <button type="submit" name="_action" value="delete" class="btn danger" onclick="return confirm('Delete this page?')">Delete</button>
    </div>
  </form>
</AdminForm>
