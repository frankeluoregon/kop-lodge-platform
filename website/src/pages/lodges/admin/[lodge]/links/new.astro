---
import AdminForm from "../../../../../layouts/AdminForm.astro";
import { getLodgeBySlug } from "../../../../../lib/db";

const lodgeSlug = Astro.params.lodge!;
const env = Astro.locals.runtime.env;

const lodge = await getLodgeBySlug(env.DB, lodgeSlug);
if (!lodge) return Astro.redirect("/", 302);

let message = "";
let isError = false;

if (Astro.request.method === "POST") {
  try {
    const form = await Astro.request.formData();
    await env.DB.prepare(
      "INSERT INTO links (lodge_id, title, url, category, description, display_order) VALUES (?,?,?,?,?,?)"
    ).bind(
      lodge.id,
      form.get("title")?.toString() ?? "",
      form.get("url")?.toString() ?? "",
      form.get("category")?.toString() || "general",
      form.get("description")?.toString() || null,
      Number(form.get("display_order") ?? 0),
    ).run();
    return Astro.redirect(`/lodges/admin/${lodgeSlug}`, 302);
  } catch (e: unknown) {
    isError = true;
    message = `Error: ${e instanceof Error ? e.message : String(e)}`;
  }
}
---

<AdminForm title="New Link" lodgeSlug={lodgeSlug}>
  {message && <div class={isError ? "error-msg" : "success-msg"}>{message}</div>}
  <form method="POST">
    <div class="field">
      <label>Title</label>
      <input type="text" name="title" required />
    </div>
    <div class="field">
      <label>URL</label>
      <input type="url" name="url" required placeholder="https://..." />
    </div>
    <div class="row">
      <div class="field">
        <label>Category <span class="hint">(e.g. general, pythian, community)</span></label>
        <input type="text" name="category" value="general" />
      </div>
      <div class="field">
        <label>Display Order <span class="hint">(lower = first)</span></label>
        <input type="number" name="display_order" value="0" min="0" />
      </div>
    </div>
    <div class="field">
      <label>Description <span class="hint">(optional)</span></label>
      <input type="text" name="description" />
    </div>
    <div class="actions">
      <button type="submit" class="btn primary">Add Link</button>
      <a href={`/lodges/admin/${lodgeSlug}`} class="btn secondary">Cancel</a>
    </div>
  </form>
</AdminForm>
