---
import AdminForm from "../../../../../layouts/AdminForm.astro";
import { getLodgeBySlug } from "../../../../../lib/db";

const lodgeSlug = Astro.params.lodge!;
const env = Astro.locals.runtime.env;

const lodge = await getLodgeBySlug(env.DB, lodgeSlug);
if (!lodge) return Astro.redirect("/", 302);

let message = "";
let isError = false;

if (Astro.request.method === "POST") {
  try {
    const form = await Astro.request.formData();
    const now = new Date().toISOString();
    const title = (form.get("title") as string || "").trim();
    const content = (form.get("content") as string || "").trim();
    if (!title || !content) throw new Error("Title and content are required.");
    await env.DB.prepare(
      "INSERT INTO lodge_announcements (lodge_id,title,content,expires_at,published,created_at) VALUES (?,?,?,?,?,?)"
    ).bind(
      lodge.id,
      title,
      content,
      (form.get("expires_at") as string || "") || null,
      form.get("published") === "1" ? 1 : 0,
      now,
    ).run();
    return Astro.redirect(`/lodges/admin/${lodgeSlug}/announcements`, 302);
  } catch (e: unknown) {
    isError = true;
    message = `Error: ${e instanceof Error ? e.message : String(e)}`;
  }
}
---

<AdminForm title="New Announcement" lodgeSlug={lodgeSlug}>
  {message && <div class={isError ? "error-msg" : "success-msg"}>{message}</div>}
  <form method="POST">
    <div class="field">
      <label>Title</label>
      <input type="text" name="title" required />
    </div>
    <div class="field">
      <label>Content <span class="hint">Markdown supported — internal only</span></label>
      <textarea name="content" rows="8" required></textarea>
    </div>
    <div class="row">
      <div class="field">
        <label>Expires <span class="hint">optional — leave blank to keep indefinitely</span></label>
        <input type="date" name="expires_at" />
      </div>
      <div class="field" style="padding-top:1.5rem">
        <label class="checkbox-row">
          <input type="checkbox" name="published" value="1" checked /> Active
        </label>
      </div>
    </div>
    <div class="actions">
      <button type="submit" class="btn primary">Post Announcement</button>
      <a href={`/lodges/admin/${lodgeSlug}/announcements`} class="btn secondary">Cancel</a>
    </div>
  </form>
</AdminForm>
