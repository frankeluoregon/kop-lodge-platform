---
import AdminForm from "../../../../../layouts/AdminForm.astro";
import { getLodgeBySlug, getAnnouncementById } from "../../../../../lib/db";
import AnnouncementForm from "../../../../../components/admin/forms/AnnouncementForm";

const lodgeSlug = Astro.params.lodge!;
const env = Astro.locals.runtime.env;

const lodge = await getLodgeBySlug(env.DB, lodgeSlug);
if (!lodge) return Astro.redirect("/", 302);

const id = Number(new URL(Astro.request.url).searchParams.get("id"));
if (!id) return Astro.redirect(`/lodges/admin/${lodgeSlug}/announcements`, 302);

const ann = await getAnnouncementById(env.DB, id);
if (!ann || ann.lodge_id !== lodge.id) return Astro.redirect(`/lodges/admin/${lodgeSlug}/announcements`, 302);

if (Astro.request.method === "POST") {
  const wantsJson = Astro.request.headers.get("Accept")?.includes("application/json");
  const form = await Astro.request.formData();
  if (form.get("_action") === "delete") {
    await env.DB.prepare("DELETE FROM lodge_announcements WHERE id = ? AND lodge_id = ?").bind(id, lodge.id).run();
    return wantsJson
      ? Response.redirect(new URL(`/lodges/admin/${lodgeSlug}/announcements`, Astro.url), 302)
      : Astro.redirect(`/lodges/admin/${lodgeSlug}/announcements`, 302);
  }
  try {
    const title = (form.get("title") as string || "").trim();
    const content = (form.get("content") as string || "").trim();
    if (!title || !content) throw new Error("Title and content are required.");
    await env.DB.prepare(
      "UPDATE lodge_announcements SET title=?,content=?,expires_at=?,published=? WHERE id=? AND lodge_id=?"
    ).bind(
      title,
      content,
      (form.get("expires_at") as string || "") || null,
      form.get("published") === "1" ? 1 : 0,
      id, lodge.id,
    ).run();
    if (wantsJson) return new Response(JSON.stringify({ message: "Announcement updated." }), { headers: { "Content-Type": "application/json" } });
  } catch (e: unknown) {
    const msg = `Error: ${e instanceof Error ? e.message : String(e)}`;
    if (wantsJson) return new Response(JSON.stringify({ error: msg }), { status: 400, headers: { "Content-Type": "application/json" } });
  }
}
---

<AdminForm title="Edit Announcement" lodgeSlug={lodgeSlug}>
  <AnnouncementForm
    client:load
    cancelUrl={`/lodges/admin/${lodgeSlug}/announcements`}
    isEdit
    initialData={{
      title: ann!.title,
      content: ann!.content,
      expires_at: ann!.expires_at ?? "",
      published: !!ann!.published,
    }}
  />
</AdminForm>
