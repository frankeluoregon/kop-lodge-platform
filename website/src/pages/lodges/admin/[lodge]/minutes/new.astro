---
import AdminForm from "../../../../../layouts/AdminForm.astro";
import { getLodgeBySlug } from "../../../../../lib/db";
import MinutesForm from "../../../../../components/admin/forms/MinutesForm";

const lodgeSlug = Astro.params.lodge!;
const env = Astro.locals.runtime.env;

const lodge = await getLodgeBySlug(env.DB, lodgeSlug);
if (!lodge) return Astro.redirect("/", 302);

if (Astro.request.method === "POST") {
  const wantsJson = Astro.request.headers.get("Accept")?.includes("application/json");
  try {
    const form = await Astro.request.formData();
    const now = new Date().toISOString();
    const meeting_date = (form.get("meeting_date") as string || "").trim();
    const content = (form.get("content") as string || "").trim();
    if (!meeting_date || !content) throw new Error("Meeting date and content are required.");
    await env.DB.prepare(
      "INSERT INTO meeting_minutes (lodge_id,meeting_date,title,content,published,created_at) VALUES (?,?,?,?,?,?)"
    ).bind(
      lodge.id,
      meeting_date,
      (form.get("title") as string || "").trim() || null,
      content,
      form.get("published") === "1" ? 1 : 0,
      now,
    ).run();
    return wantsJson
      ? Response.redirect(new URL(`/lodges/admin/${lodgeSlug}/minutes`, Astro.url), 302)
      : Astro.redirect(`/lodges/admin/${lodgeSlug}/minutes`, 302);
  } catch (e: unknown) {
    const msg = `Error: ${e instanceof Error ? e.message : String(e)}`;
    if (wantsJson) return new Response(JSON.stringify({ error: msg }), { status: 400, headers: { "Content-Type": "application/json" } });
  }
}
---

<AdminForm title="Add Meeting Minutes" lodgeSlug={lodgeSlug}>
  <MinutesForm
    client:only="react"
    cancelUrl={`/lodges/admin/${lodgeSlug}/minutes`}
  />
</AdminForm>
