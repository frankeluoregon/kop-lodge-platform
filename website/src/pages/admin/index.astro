---
import { getSession, isSiteAdmin, isAccessConfigured, DEV_SESSION } from "../../lib/auth";
import { getAllLodgesAdmin } from "../../lib/db";

const env = Astro.locals.runtime.env;

let session;
if (isAccessConfigured(env)) {
  session = await getSession(Astro.request, env);
  if (!session || !isSiteAdmin(session)) {
    return new Response("Forbidden", { status: 403 });
  }
} else {
  session = DEV_SESSION;
}

const lodges = await getAllLodgesAdmin(env.DB);

const primary   = "#252e67";
const accent    = "#f5a71c";
const secondary = "#a91e23";
const neutral   = "#4a5072";
const contentBg = "#ded3c3";
---

<!doctype html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>Site Admin â€“ Oregon Knights of Pythias</title>
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <style define:vars={{ primary, accent, secondary, neutral, contentBg }}>
    *, *::before, *::after { box-sizing: border-box; margin: 0; padding: 0; }
    body { font-family: 'Trebuchet MS', Trebuchet, Arial, sans-serif; color: #1a1a2e;
      background-image: url('/mainbg.png'); background-size: cover; background-position: center;
      background-attachment: fixed; background-color: var(--primary); }
    a { color: var(--primary); text-decoration: none; }
    a:hover { text-decoration: underline; }

    .topbar {
      background: rgba(74,80,114,.92); color: #fff; padding: .4rem 1.5rem;
      display: flex; align-items: center; justify-content: space-between;
    }
    .topbar .brand { display: flex; align-items: center; gap: .5rem; }
    .topbar .brand img { height: 22px; width: auto; }
    .topbar .brand span { color: var(--accent); font-weight: bold; font-size: .95rem; }
    .topbar nav { display: flex; gap: .5rem; align-items: center; }
    .topbar nav a { color: rgba(255,255,255,.85); font-size: .8rem; padding: .25rem .5rem; border-radius: 4px; }
    .topbar nav a:hover { background: rgba(255,255,255,.15); text-decoration: none; }
    .topbar .user { font-size: .75rem; color: rgba(255,255,255,.6); }

    .rope-border { width: 100%; height: 10px; background: url('/ropeborder.svg') repeat-x left/auto 10px; }

    main { max-width: 900px; margin: 0 auto; padding: 1.5rem 1rem; }
    .content-panel {
      background: rgba(222,211,195,0.90); border-radius: 6px; padding: 1.75rem;
      box-shadow: 0 2px 8px rgba(0,0,0,.12);
    }
    h1 { font-size: 1.4rem; margin-bottom: .5rem; color: var(--primary); }
    .subtitle { font-size: .88rem; color: var(--neutral); margin-bottom: 1.5rem; }

    .lodge-table { width: 100%; border-collapse: collapse; background: #f7f0e7; border: 1px solid #ddd; border-radius: 6px; overflow: hidden; }
    .lodge-table th { background: var(--primary); color: #fff; text-align: left; padding: .6rem .8rem; font-size: .82rem; text-transform: uppercase; letter-spacing: .04em; }
    .lodge-table td { padding: .55rem .8rem; border-bottom: 1px solid #e0d5c5; font-size: .88rem; }
    .lodge-table tr:last-child td { border-bottom: none; }
    .lodge-table tr:hover td { background: #efe6d8; }
    .lodge-table .slug { font-family: 'Cascadia Code', Consolas, monospace; font-size: .82rem; color: var(--neutral); }
    .lodge-table .inactive { opacity: .5; }
    .badge { display: inline-block; font-size: .68rem; font-weight: 700; text-transform: uppercase; letter-spacing: .06em; padding: .15rem .45rem; border-radius: 99px; }
    .badge.active { background: #d4edda; color: #155724; }
    .badge.disabled { background: #f8d7da; color: #721c24; }

    .btn { display: inline-block; padding: .3rem .7rem; font-size: .8rem; border-radius: 4px; border: 1.5px solid var(--primary); color: var(--primary); font-weight: 600; transition: background .15s, color .15s; }
    .btn:hover { background: var(--primary); color: #fff; text-decoration: none; }
    .btn.add { background: var(--secondary); color: #fff; border: none; padding: .45rem 1rem; font-size: .88rem; margin-bottom: 1.25rem; }
    .btn.add:hover { opacity: .88; text-decoration: none; }

    .empty { text-align: center; padding: 2rem; color: var(--neutral); font-size: .9rem; }

    footer {
      background: var(--secondary); color: var(--accent); text-align: center;
      padding: 1rem; margin-top: 2rem; font-size: .82rem;
    }
    footer a { color: var(--accent); opacity: .85; }
    footer a:hover { opacity: 1; }
  </style>
</head>
<body>
  <div class="rope-border"></div>
  <div class="topbar">
    <div class="brand">
      <img src="/seal.svg" alt="KoP Seal" />
      <span>Site Admin</span>
    </div>
    <nav>
      <a href="/">View Site</a>
      <span class="user">{session.email}</span>
      {isAccessConfigured(env) && <a href={`https://${env.CF_ACCESS_TEAM_NAME}.cloudflareaccess.com/cdn-cgi/access/logout`}>Log out</a>}
    </nav>
  </div>
  <div class="rope-border"></div>

  <main>
    <div class="content-panel" style="margin-bottom: 1.5rem;">
      <h1>Grand Lodge</h1>
      <p class="subtitle">Manage grand lodge settings and content.</p>
      <a class="btn add" href="/admin/grand-lodge-config">Grand Lodge Settings</a>
    </div>

    <div class="content-panel">
      <h1>Lodge Management</h1>
      <p class="subtitle">Create and manage lodges across the Oregon Grand Domain.</p>

      <a class="btn add" href="/admin/lodges/new">+ Create Lodge</a>

      {lodges.length === 0 ? (
        <div class="empty">
          <p>No lodges yet. Create your first lodge to get started.</p>
        </div>
      ) : (
        <table class="lodge-table">
          <thead>
            <tr>
              <th>No.</th>
              <th>Name</th>
              <th>Slug</th>
              <th>Status</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            {lodges.map((lodge) => (
              <tr class={lodge.active ? "" : "inactive"}>
                <td>{lodge.number}</td>
                <td>{lodge.name}</td>
                <td class="slug">/{lodge.slug}</td>
                <td>
                  <span class={`badge ${lodge.active ? "active" : "disabled"}`}>
                    {lodge.active ? "Active" : "Inactive"}
                  </span>
                </td>
                <td>
                  <a class="btn" href={`/admin/lodges/edit?id=${lodge.id}`}>Edit</a>
                  {lodge.active ? (
                    <>
                      <a class="btn" href={`/lodges/${lodge.slug}/`}>Site</a>
                      <a class="btn" href={`/lodges/admin/${lodge.slug}`}>Admin</a>
                    </>
                  ) : null}
                </td>
              </tr>
            ))}
          </tbody>
        </table>
      )}
    </div>
  </main>

  <footer>
    <p>&copy; {new Date().getFullYear()} Oregon Knights of Pythias &middot; <a href="/admin">Admin</a></p>
  </footer>
</body>
</html>
