---
import { getSession, isSiteAdmin, isAccessConfigured, DEV_SESSION } from "../../../lib/auth";
import { getLodgeById, updateLodge } from "../../../lib/db";

const env = Astro.locals.runtime.env;

let session;
if (isAccessConfigured(env)) {
  session = await getSession(Astro.request, env);
  if (!session || !isSiteAdmin(session)) {
    return new Response("Forbidden", { status: 403 });
  }
} else {
  session = DEV_SESSION;
}

const id = Number(Astro.url.searchParams.get("id"));
if (!id) return Astro.redirect("/admin", 302);

let lodge = await getLodgeById(env.DB, id);
if (!lodge) return Astro.redirect("/admin", 302);

let error = "";
let success = Astro.url.searchParams.get("created") ? "Lodge created successfully!" : "";

if (Astro.request.method === "POST") {
  const form = await Astro.request.formData();
  const name = (form.get("name") as string || "").trim();
  const number = (form.get("number") as string || "").trim();
  const slug = (form.get("slug") as string || "").trim().toLowerCase().replace(/[^a-z0-9-]/g, "");
  const active = form.get("active") === "on" ? 1 : 0;

  const adminEmails = (form.get("admin_emails") as string || "")
    .split(/[\n,]+/).map(e => e.trim().toLowerCase()).filter(Boolean);

  if (!name || !number || !slug) {
    error = "Name, number, and slug are required.";
  } else {
    try {
      await updateLodge(env.DB, id, slug, name, number, active);
      // Replace lodge admin roles: delete old, insert new
      await env.DB.prepare("DELETE FROM admin_roles WHERE role = ?").bind(`lodge:${lodge!.slug}`).run();
      // If slug changed, also delete old slug roles
      if (slug !== lodge!.slug) {
        await env.DB.prepare("DELETE FROM admin_roles WHERE role = ?").bind(`lodge:${slug}`).run();
      }
      const now = new Date().toISOString();
      for (const email of adminEmails) {
        await env.DB.prepare(
          "INSERT OR IGNORE INTO admin_roles (email, role, created_at) VALUES (?, ?, ?)"
        ).bind(email, `lodge:${slug}`, now).run();
      }
      lodge = await getLodgeById(env.DB, id);
      success = "Lodge updated.";
    } catch (e: any) {
      error = e.message?.includes("UNIQUE") ? "A lodge with that slug already exists." : `Error: ${e.message}`;
    }
  }
}

const adminRoles = await env.DB.prepare(
  "SELECT email FROM admin_roles WHERE role = ?"
).bind(`lodge:${lodge!.slug}`).all<{ email: string }>();
const currentAdminEmails = adminRoles.results.map(r => r.email).join("\n");

const primary   = "#252e67";
const accent    = "#f5a71c";
const secondary = "#a91e23";
const neutral   = "#4a5072";
const contentBg = "#ded3c3";
---

<!doctype html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>Edit Lodge – Site Admin</title>
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <style define:vars={{ primary, accent, secondary, neutral, contentBg }}>
    *, *::before, *::after { box-sizing: border-box; margin: 0; padding: 0; }
    body { font-family: 'Trebuchet MS', Trebuchet, Arial, sans-serif; background: var(--primary); color: #1a1a2e; }
    a { color: var(--primary); text-decoration: none; }
    a:hover { text-decoration: underline; }

    .topbar { background: var(--neutral); color: #fff; padding: .6rem 1.5rem; display: flex; align-items: center; justify-content: space-between; }
    .topbar .brand { display: flex; align-items: center; gap: .5rem; }
    .topbar .brand img { height: 28px; width: auto; }
    .topbar .brand span { color: var(--accent); font-weight: bold; font-size: 1.1rem; }
    .topbar nav { display: flex; gap: .5rem; align-items: center; }
    .topbar nav a { color: rgba(255,255,255,.85); font-size: .85rem; padding: .3rem .6rem; border-radius: 4px; }
    .topbar nav a:hover { background: rgba(255,255,255,.15); text-decoration: none; }

    .tricolor { display: flex; height: 5px; }
    .tricolor span { flex: 1; }

    main { max-width: 600px; margin: 0 auto; padding: 1.5rem 1rem; }
    .content-panel {
      background: var(--contentBg); border-radius: 6px; padding: 1.75rem;
      box-shadow: 0 2px 8px rgba(0,0,0,.08);
    }
    .back-link { font-size: .85rem; margin-bottom: 1rem; display: inline-block; color: var(--accent); }
    h1 { font-size: 1.4rem; color: var(--primary); margin-bottom: 1.25rem; }

    form { background: #f7f0e7; border: 1px solid #e0d5c5; border-radius: 6px; padding: 1.5rem; }
    .field { margin-bottom: 1.1rem; }
    label { display: block; font-size: .85rem; font-weight: 600; color: #333; margin-bottom: .3rem; }
    label .hint { font-weight: 400; color: #888; font-size: .8rem; margin-left: .4rem; }
    input[type="text"], input[type="number"] {
      width: 100%; padding: .55rem .75rem; border: 1.5px solid #ccc;
      border-radius: 5px; font-size: .9rem; font-family: inherit; background: #fff;
    }
    input:focus { outline: none; border-color: var(--primary); }
    .checkbox-row { display: flex; align-items: center; gap: .5rem; }
    .checkbox-row input { width: auto; }

    .actions { display: flex; gap: .75rem; margin-top: 1.5rem; align-items: center; }
    .btn { padding: .55rem 1.2rem; border-radius: 5px; border: 1.5px solid var(--primary); font-size: .9rem; font-family: inherit; cursor: pointer; transition: background .15s, color .15s; }
    .btn.primary { background: var(--secondary); color: #fff; border-color: var(--secondary); }
    .btn.primary:hover { opacity: .88; }
    .btn.secondary { background: transparent; color: var(--primary); }
    .btn.secondary:hover { background: var(--primary); color: #fff; text-decoration: none; }

    .links { margin-top: 1rem; font-size: .85rem; display: flex; gap: 1rem; color: var(--neutral); }

    .success-msg { background: #d4edda; border: 1px solid #c3e6cb; color: #155724; border-radius: 5px; padding: .6rem 1rem; margin-bottom: 1rem; font-size: .88rem; }
    .error-msg { background: #f8d7da; border: 1px solid #f5c6cb; color: #721c24; border-radius: 5px; padding: .6rem 1rem; margin-bottom: 1rem; font-size: .88rem; }

    footer {
      background: var(--secondary); color: var(--accent); text-align: center;
      padding: 1rem; margin-top: 2rem; font-size: .82rem;
    }
    footer a { color: var(--accent); opacity: .85; }
    footer a:hover { opacity: 1; }
  </style>
</head>
<body>
  <div class="tricolor">
    <span style={`background:${primary}`}></span>
    <span style={`background:${secondary}`}></span>
    <span style={`background:${accent}`}></span>
  </div>
  <div class="topbar">
    <div class="brand">
      <img src="/seal.svg" alt="KoP Seal" />
      <span>Site Admin</span>
    </div>
    <nav>
      <a href="/admin">Dashboard</a>
      <a href="/">View Site</a>
    </nav>
  </div>
  <div class="tricolor">
    <span style={`background:${primary}`}></span>
    <span style={`background:${secondary}`}></span>
    <span style={`background:${accent}`}></span>
  </div>

  <main>
    <div class="content-panel">
      <a class="back-link" href="/admin">&larr; Back to Dashboard</a>
      <h1>Edit Lodge</h1>

      {success && <div class="success-msg">{success}</div>}
      {error && <div class="error-msg">{error}</div>}

      <form method="POST">
        <div class="field">
          <label>Lodge Name</label>
          <input type="text" name="name" value={lodge!.name} required />
        </div>
        <div class="field">
          <label>Lodge Number</label>
          <input type="text" name="number" value={lodge!.number} required />
        </div>
        <div class="field">
          <label>URL Slug <span class="hint">lowercase, letters/numbers/hyphens only</span></label>
          <input type="text" name="slug" value={lodge!.slug} required pattern="[a-z0-9-]+" />
        </div>
        <div class="field">
          <div class="checkbox-row">
            <input type="checkbox" name="active" id="active" checked={!!lodge!.active} />
            <label for="active" style="margin-bottom:0">Active</label>
          </div>
        </div>
        <div class="field">
          <label>Lodge Admin Emails <span class="hint">one per line or comma-separated — replaces existing admins on save</span></label>
          <textarea name="admin_emails" rows="4" style="width:100%;padding:.55rem .75rem;border:1.5px solid #ccc;border-radius:5px;font-size:.9rem;font-family:inherit;background:#fff;resize:vertical">{currentAdminEmails}</textarea>
        </div>
        <div class="actions">
          <button type="submit" class="btn primary">Save Changes</button>
          {lodge!.active ? (
            <>
              <a class="btn secondary" href={`/lodges/${lodge!.slug}/`}>View Site</a>
              <a class="btn secondary" href={`/lodges/admin/${lodge!.slug}`}>Lodge Admin</a>
            </>
          ) : null}
        </div>
      </form>

    </div>
  </main>

  <footer>
    <p>&copy; {new Date().getFullYear()} Oregon Knights of Pythias &middot; <a href="/admin">Admin</a></p>
  </footer>
</body>
</html>
