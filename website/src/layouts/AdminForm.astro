---
/**
 * Shared layout for admin edit forms.
 * Checks Cloudflare Access session and lodge access; returns 403 if unauthorized.
 */
import { getSession, canAccessLodge, isAccessConfigured, DEV_SESSION } from "../lib/auth";
import { getLodgeBySlug, getConfig } from "../lib/db";

interface Props {
  title: string;
  lodgeSlug: string;
  backUrl?: string;
  backLabel?: string;
}

const { title, lodgeSlug, backUrl, backLabel = "← Dashboard" } = Astro.props;
const backHref = backUrl ?? `/lodges/admin/${lodgeSlug}`;

const env = Astro.locals.runtime.env;

let session;
if (isAccessConfigured(env)) {
  session = await getSession(Astro.request, env);
  if (!session || !canAccessLodge(session, lodgeSlug)) {
    return new Response("Forbidden", { status: 403 });
  }
} else {
  session = DEV_SESSION;
}

const lodge = await getLodgeBySlug(env.DB, lodgeSlug);
if (!lodge) return Astro.redirect("/", 302);

const config = await getConfig(env.DB, lodge.id);
const primary = config.primary_color || "#252e67";
const accent  = config.accent_color  || "#f5a71c";
const neutral = "#4a5072";
---

<!doctype html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>{title} – Admin</title>
  <style define:vars={{ primary, accent, neutral }}>
    *, *::before, *::after { box-sizing: border-box; margin: 0; padding: 0; }
    body { font-family: 'Trebuchet MS', Trebuchet, Arial, sans-serif; color: #1a1a2e;
      background-image: url('/mainbg.png'); background-size: cover; background-position: center;
      background-attachment: fixed; background-color: #252e67; }
    a { color: var(--primary); text-decoration: none; }
    a:hover { text-decoration: underline; }

    .tricolor { display: flex; height: 5px; border-top: 2px solid #000; border-bottom: 2px solid #000; }
    .tricolor span { flex: 1; }

    .topbar {
      background: rgba(74,80,114,.92); color: #fff; padding: .4rem 1.5rem;
      display: flex; align-items: center; justify-content: space-between;
    }
    .topbar .brand { color: var(--accent); font-weight: bold; font-size: .95rem; }
    .topbar nav { display: flex; gap: .5rem; align-items: center; }
    .topbar nav a { color: rgba(255,255,255,.8); font-size: .8rem; padding: .25rem .5rem; border-radius: 4px; }
    .topbar nav a:hover { background: rgba(255,255,255,.15); text-decoration: none; }
    .topbar .user { font-size: .75rem; color: rgba(255,255,255,.6); }

    main { max-width: 780px; margin: 1.5rem auto; padding: 1.25rem 1rem 2rem;
      background: rgba(222,211,195,0.90); border-radius: 6px;
      box-shadow: 0 4px 24px rgba(0,0,0,.18); }
    .back-link { font-size: .85rem; margin-bottom: 1rem; display: inline-block; color: var(--primary); }
    h1 { font-size: 1.4rem; color: var(--primary); margin-bottom: 1.25rem; }

    form { background: #fff; border: 1px solid #dde; border-radius: 6px; padding: 1.5rem 1.75rem; box-shadow: 0 1px 4px rgba(0,0,0,.06); }

    .field { margin-bottom: 1.6rem; display: flex; align-items: baseline; gap: .4rem .8rem; }
    label { width: 120px; min-width: 120px; flex-shrink: 0; text-align: right; font-size: .82rem; font-weight: 600; color: #444; line-height: 1.4; padding-top: .45rem; margin-bottom: 0; }
    label .hint { font-weight: 400; color: #888; font-size: .76rem; display: block; text-align: right; }
    label.checkbox-row { width: auto; min-width: 0; flex: 1; text-align: left; padding-left: calc(120px + .8rem); padding-top: 0; font-weight: 400; color: #333; font-size: .88rem; }

    input[type="text"], input[type="email"], input[type="url"],
    input[type="date"], input[type="number"], select, textarea {
      flex: 1; min-width: 0; padding: .5rem .4rem; border: none;
      border-bottom: 1.5px solid #c8bfb5; border-radius: 0;
      font-size: .9rem; font-family: inherit; background: transparent;
    }
    input:focus, select:focus, textarea:focus { outline: none; border-bottom-color: var(--primary); }
    textarea { min-height: 220px; resize: vertical; font-family: 'Cascadia Code', Consolas, monospace; font-size: .85rem; }

    .row { display: grid; grid-template-columns: 1fr 1fr; gap: 1.25rem; }
    .checkbox-row { display: flex; align-items: center; gap: .5rem; }
    .checkbox-row input { width: auto; flex: none; }

    .actions { display: flex; gap: .75rem; margin-top: 1.75rem; align-items: center; padding-left: calc(120px + .8rem); }
    .btn { padding: .55rem 1.2rem; border-radius: 5px; border: 1.5px solid var(--primary); font-size: .9rem; font-family: inherit; cursor: pointer; transition: background .15s, color .15s; }
    .btn.primary { background: var(--primary); color: #fff; border-color: var(--primary); }
    .btn.primary:hover { opacity: .88; }
    .btn.secondary { background: transparent; color: var(--primary); }
    .btn.secondary:hover { background: var(--primary); color: #fff; text-decoration: none; }
    .btn.danger { border-color: #c00; color: #c00; background: transparent; }
    .btn.danger:hover { background: #c00; color: #fff; }

    .success-msg { background: #d4edda; border: 1px solid #c3e6cb; color: #155724; border-radius: 5px; padding: .6rem 1rem; margin-bottom: 1rem; font-size: .88rem; }
    .error-msg   { background: #f8d7da; border: 1px solid #f5c6cb; color: #721c24; border-radius: 5px; padding: .6rem 1rem; margin-bottom: 1rem; font-size: .88rem; }
  </style>
</head>
<body>
  <div class="tricolor">
    <span style="background:#252e67"></span>
    <span style="background:#a91e23"></span>
    <span style="background:#f5a71c"></span>
  </div>
  <div class="topbar">
    <span class="brand">{config.lodge_name} — Admin</span>
    <nav>
      <a href={`/lodges/${lodgeSlug}`}>View Site</a>
      <a href={`/lodges/admin/${lodgeSlug}`}>Dashboard</a>
      <span class="user">{session.email}</span>
      {isAccessConfigured(env) && <a href={`https://${env.CF_ACCESS_TEAM_NAME}.cloudflareaccess.com/cdn-cgi/access/logout`}>Log out</a>}
    </nav>
  </div>
  <div class="tricolor">
    <span style="background:#252e67"></span>
    <span style="background:#a91e23"></span>
    <span style="background:#f5a71c"></span>
  </div>
  <main>
    <a class="back-link" href={backHref}>{backLabel}</a>
    <h1>{title}</h1>
    <slot />
  </main>
</body>
</html>
