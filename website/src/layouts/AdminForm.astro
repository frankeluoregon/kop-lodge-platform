---
/**
 * Shared layout for admin edit forms.
 * Checks Cloudflare Access session and lodge access; returns 403 if unauthorized.
 */
import { getSession, canAccessLodge, isAccessConfigured, DEV_SESSION } from "../lib/auth";
import { getLodgeBySlug, getConfig } from "../lib/db";

interface Props {
  title: string;
  lodgeSlug: string;
  backUrl?: string;
  backLabel?: string;
}

const { title, lodgeSlug, backUrl, backLabel = "← Dashboard" } = Astro.props;
const backHref = backUrl ?? `/lodges/admin/${lodgeSlug}`;

const env = Astro.locals.runtime.env;

let session;
if (isAccessConfigured(env)) {
  session = await getSession(Astro.request, env);
  if (!session || !canAccessLodge(session, lodgeSlug)) {
    return new Response("Forbidden", { status: 403 });
  }
} else {
  session = DEV_SESSION;
}

const lodge = await getLodgeBySlug(env.DB, lodgeSlug);
if (!lodge) return Astro.redirect("/", 302);

const config = await getConfig(env.DB, lodge.id);
const primary = config.primary_color || "#252e67";
const accent  = config.accent_color  || "#f5a71c";
const neutral = "#4a5072";
---

<!doctype html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>{title} – Admin</title>
  <style is:global define:vars={{ primary, accent, neutral }}>
    *, *::before, *::after { box-sizing: border-box; margin: 0; padding: 0; }
    body { font-family: 'Trebuchet MS', Trebuchet, Arial, sans-serif; color: #1a1a2e;
      background-image: url('/mainbg.png'); background-size: cover; background-position: center;
      background-attachment: fixed; background-color: #252e67; }
    a { color: var(--primary); text-decoration: none; }
    a:hover { text-decoration: underline; }

    .tricolor { display: flex; height: 5px; border-top: 2px solid #000; border-bottom: 2px solid #000; }
    .tricolor span { flex: 1; }

    .topbar {
      background: rgba(74,80,114,.92); color: #fff; padding: .4rem 1.5rem;
      display: flex; align-items: center; justify-content: space-between;
    }
    .topbar .brand { color: var(--accent); font-weight: bold; font-size: .95rem; }
    .topbar nav { display: flex; gap: .5rem; align-items: center; }
    .topbar nav a { color: rgba(255,255,255,.8); font-size: .8rem; padding: .25rem .5rem; border-radius: 4px; }
    .topbar nav a:hover { background: rgba(255,255,255,.15); text-decoration: none; }
    .topbar .user { font-size: .75rem; color: rgba(255,255,255,.6); }

    .af-main { max-width: 780px; margin: 1.5rem auto; padding: 1.25rem 1rem 2rem;
      background: rgba(222,211,195,0.90); border-radius: 6px;
      box-shadow: 0 4px 24px rgba(0,0,0,.18); }
    .af-main .back-link { font-size: .85rem; margin-bottom: 1rem; display: inline-block; color: var(--primary); }
    .af-main h1 { font-size: 1.4rem; color: var(--primary); margin-bottom: 1.25rem; }

    .af-main form { background: #fff; border: none; border-radius: 10px; padding: 1.75rem 2rem; box-shadow: 0 2px 10px rgba(0,0,0,.07); }

    .af-main .field { margin-bottom: 1rem; }
    .af-main label { display: block; font-size: .68rem; font-weight: 700; color: #999; text-transform: uppercase; letter-spacing: .07em; margin-bottom: .3rem; }
    .af-main label .hint { font-weight: 400; color: #bbb; font-size: .68rem; text-transform: none; letter-spacing: 0; margin-left: .3rem; }
    .af-main label.checkbox-row { font-size: .88rem; font-weight: 400; color: #444; text-transform: none; letter-spacing: 0; display: flex; align-items: center; gap: .5rem; }

    .af-main input[type="text"], .af-main input[type="email"], .af-main input[type="url"],
    .af-main input[type="date"], .af-main input[type="number"], .af-main input[type="tel"],
    .af-main select, .af-main textarea {
      width: 100%; padding: .65rem .85rem;
      background: rgba(37,46,103,.07); border: none; border-radius: 6px;
      font-size: .88rem; font-family: inherit; color: #1a1a2e;
    }
    .af-main input:focus, .af-main select:focus, .af-main textarea:focus {
      outline: none; background: rgba(37,46,103,.11); box-shadow: 0 0 0 2px rgba(37,46,103,.2);
    }
    .af-main textarea { min-height: 200px; resize: vertical; font-family: 'Cascadia Code', Consolas, monospace; font-size: .84rem; }

    .af-main .row { display: grid; grid-template-columns: 1fr 1fr; gap: 1rem; }
    .af-main .checkbox-row { display: flex; align-items: center; gap: .5rem; }
    .af-main .checkbox-row input { width: auto; }

    .af-main .actions { display: flex; gap: .75rem; margin-top: 1.5rem; align-items: center; }
    .af-main .btn { display: inline-block; padding: .6rem 1.3rem; border-radius: 6px; border: 1.5px solid var(--primary); font-size: .88rem; font-family: inherit; cursor: pointer; text-decoration: none; transition: background .15s, color .15s; }
    .af-main .btn.primary { background: var(--primary); color: #fff; border-color: var(--primary); }
    .af-main .btn.primary:hover { opacity: .88; text-decoration: none; }
    .af-main .btn.secondary { background: transparent; color: var(--primary); }
    .af-main .btn.secondary:hover { background: var(--primary); color: #fff; text-decoration: none; }
    .af-main .btn.danger { border-color: #c00; color: #c00; background: transparent; }
    .af-main .btn.danger:hover { background: #c00; color: #fff; }

    .af-main .success-msg { background: #d4edda; border: 1px solid #c3e6cb; color: #155724; border-radius: 5px; padding: .6rem 1rem; margin-bottom: 1rem; font-size: .88rem; }
    .af-main .error-msg   { background: #f8d7da; border: 1px solid #f5c6cb; color: #721c24; border-radius: 5px; padding: .6rem 1rem; margin-bottom: 1rem; font-size: .88rem; }
    .af-main .field-error { display: block; font-size: .72rem; color: #c00; margin-top: .25rem; font-weight: 500; }
    .af-main .btn:disabled { opacity: .5; cursor: not-allowed; }
    .af-main .required { color: #c00; }
  </style>
</head>
<body>
  <div class="tricolor">
    <span style="background:#252e67"></span>
    <span style="background:#a91e23"></span>
    <span style="background:#f5a71c"></span>
  </div>
  <div class="topbar">
    <span class="brand">{config.lodge_name} — Admin</span>
    <nav>
      <a href={`/lodges/${lodgeSlug}`}>View Site</a>
      <a href={`/lodges/admin/${lodgeSlug}`}>Dashboard</a>
      <span class="user">{session.email}</span>
      {isAccessConfigured(env) && <a href={`https://${env.CF_ACCESS_TEAM_NAME}.cloudflareaccess.com/cdn-cgi/access/logout`}>Log out</a>}
    </nav>
  </div>
  <div class="tricolor">
    <span style="background:#252e67"></span>
    <span style="background:#a91e23"></span>
    <span style="background:#f5a71c"></span>
  </div>
  <main class="af-main">
    <a class="back-link" href={backHref}>{backLabel}</a>
    <h1>{title}</h1>
    <slot />
  </main>
</body>
</html>
