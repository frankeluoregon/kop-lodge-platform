---
/**
 * Shared layout for site-level admin pages (no lodge context).
 * Checks Cloudflare Access session and site-admin role; returns 403 if unauthorized.
 */
import { getSession, isSiteAdmin, isAccessConfigured, DEV_SESSION } from "../lib/auth";

interface Props {
  title: string;
  backUrl?: string;
  backLabel?: string;
}

const { title, backUrl = "/admin", backLabel = "\u2190 Back to Dashboard" } = Astro.props;

const env = Astro.locals.runtime.env;

let session;
if (isAccessConfigured(env)) {
  session = await getSession(Astro.request, env);
  if (!session || !isSiteAdmin(session)) {
    return new Response("Forbidden", { status: 403 });
  }
} else {
  session = DEV_SESSION;
}

const primary   = "#252e67";
const accent    = "#f5a71c";
const secondary = "#a91e23";
const neutral   = "#4a5072";
---

<!doctype html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>{title} â€“ Site Admin</title>
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <style is:global define:vars={{ primary, accent, neutral }}>
    *, *::before, *::after { box-sizing: border-box; margin: 0; padding: 0; }
    body { font-family: 'Trebuchet MS', Trebuchet, Arial, sans-serif; color: #1a1a2e;
      background-image: url('/mainbg.png'); background-size: cover; background-position: center;
      background-attachment: fixed; background-color: #252e67; }
    a { color: var(--primary); text-decoration: none; }
    a:hover { text-decoration: underline; }

    .rope-border { width: 100%; height: 10px; background: url('/ropeborder.svg') repeat-x left/auto 10px; }

    .topbar {
      background: rgba(74,80,114,.92); color: #fff; padding: .4rem 1.5rem;
      display: flex; align-items: center; justify-content: space-between;
    }
    .topbar .brand { display: flex; align-items: center; gap: .5rem; }
    .topbar .brand img { height: 22px; width: auto; }
    .topbar .brand span { color: var(--accent); font-weight: bold; font-size: .95rem; }
    .topbar nav { display: flex; gap: .5rem; align-items: center; }
    .topbar nav a { color: rgba(255,255,255,.8); font-size: .8rem; padding: .25rem .5rem; border-radius: 4px; }
    .topbar nav a:hover { background: rgba(255,255,255,.15); text-decoration: none; }
    .topbar .user { font-size: .75rem; color: rgba(255,255,255,.6); }

    .af-main { max-width: 660px; margin: 1.5rem auto; padding: 1.25rem 1rem 2rem;
      background: rgba(222,211,195,0.90); border-radius: 8px;
      box-shadow: 0 2px 16px rgba(0,0,0,.14); }
    .af-main .back-link { font-size: .85rem; margin-bottom: 1rem; display: inline-block; color: var(--primary); text-transform: uppercase; font-weight: 600; opacity: .75; transition: opacity .15s; }
    .af-main .back-link:hover { opacity: 1; }
    .af-main h1 { font-size: 1.5rem; color: var(--primary); margin-bottom: 1.25rem; display: inline-block; border-bottom: 2px solid #f5a71c; }

    .af-main form { background: #fff; border: none; border-radius: 8px; padding: 2rem 2.25rem; box-shadow: 0 2px 10px rgba(0,0,0,.07); }
    .af-main form h3 { font-size: .72rem; text-transform: uppercase; color: #a91e23; letter-spacing: .07em; margin-bottom: .75rem; padding-bottom: .35rem; border-bottom: 1.5px solid #a91e23; }
    .af-main form p.hint { font-size: .78rem; color: #888; margin-bottom: .75rem; }

    .af-main .field { margin-bottom: 1.2rem; }
    .af-main label { display: block; font-size: .72rem; font-weight: 700; color: #7a7a8c; text-transform: uppercase; letter-spacing: .07em; margin-bottom: .3rem; }
    .af-main label .hint { font-weight: 400; color: #bbb; font-size: .68rem; text-transform: none; letter-spacing: 0; margin-left: .3rem; }
    .af-main label.checkbox-row { font-size: .88rem; font-weight: 400; color: #444; text-transform: none; letter-spacing: 0; display: flex; align-items: center; gap: .5rem; }

    .af-main input[type="text"], .af-main input[type="email"], .af-main input[type="url"],
    .af-main input[type="date"], .af-main input[type="number"], .af-main input[type="tel"],
    .af-main select, .af-main textarea {
      width: 100%; padding: .65rem .85rem;
      background: rgba(37,46,103,.07); border: none; border-bottom: 2px solid transparent; border-radius: 6px 6px 0 0;
      font-size: .88rem; font-family: inherit; color: #1a1a2e;
      transition: border-color .15s, background .15s;
    }
    .af-main input:focus, .af-main select:focus, .af-main textarea:focus {
      outline: none; background: rgba(37,46,103,.11); border-bottom-color: var(--primary);
    }
    .af-main textarea { min-height: 200px; resize: vertical; font-family: 'Cascadia Code', Consolas, monospace; font-size: .84rem; }

    .af-main .row { display: grid; grid-template-columns: 1fr 1fr; gap: 1rem; }
    .af-main .checkbox-row { display: flex; align-items: center; gap: .5rem; }
    .af-main .checkbox-row input { width: auto; }
    .af-main .checkbox-row label { margin-bottom: 0; }

    .af-main .actions { display: flex; gap: .75rem; margin-top: 1.5rem; align-items: center; }
    .af-main .btn { display: inline-block; padding: .6rem 1.3rem; border-radius: 6px; border: 1.5px solid var(--primary); font-size: .88rem; font-family: inherit; font-weight: 600; cursor: pointer; text-decoration: none; transition: background .15s, color .15s, transform .1s, box-shadow .15s; }
    .af-main .btn.primary { background: var(--primary); color: #fff; border-color: var(--primary); }
    .af-main .btn.primary:hover { background: #1b2250; box-shadow: 0 2px 8px rgba(37,46,103,.3); text-decoration: none; }
    .af-main .btn:active { transform: translateY(1px); }
    .af-main .btn.secondary { background: transparent; color: var(--primary); }
    .af-main .btn.secondary:hover { background: var(--primary); color: #fff; text-decoration: none; }
    .af-main .btn.danger { border-color: #a91e23; color: #a91e23; background: transparent; }
    .af-main .btn.danger:hover { background: #a91e23; color: #fff; }

    .af-main .success-msg { background: #d4edda; border: 1px solid #c3e6cb; border-left: 3px solid #28a745; color: #155724; border-radius: 5px; padding: .6rem 1rem; margin-bottom: 1rem; font-size: .88rem; }
    .af-main .error-msg   { background: #f8d7da; border: 1px solid #f5c6cb; border-left: 3px solid #a91e23; color: #721c24; border-radius: 5px; padding: .6rem 1rem; margin-bottom: 1rem; font-size: .88rem; }
    .af-main .field-error { display: block; font-size: .72rem; color: #a91e23; margin-top: .25rem; font-weight: 500; }
    .af-main .btn:disabled { opacity: .5; cursor: not-allowed; }
    .af-main .required { color: #a91e23; }

    @media (max-width: 560px) { .af-main .row { grid-template-columns: 1fr; } }
  </style>
</head>
<body>
  <div class="rope-border"></div>
  <div class="topbar">
    <div class="brand">
      <img src="/seal.svg" alt="KoP Seal" />
      <span>Site Admin</span>
    </div>
    <nav>
      <a href="/admin">Dashboard</a>
      <a href="/">View Site</a>
      <span class="user">{session.email}</span>
      {isAccessConfigured(env) && <a href={`https://${env.CF_ACCESS_TEAM_NAME}.cloudflareaccess.com/cdn-cgi/access/logout`}>Log out</a>}
    </nav>
  </div>
  <div class="rope-border"></div>

  <main class="af-main">
    <a class="back-link" href={backUrl}>{backLabel}</a>
    <h1>{title}</h1>
    <slot />
  </main>

  <footer style="background:#a91e23;color:#f5a71c;text-align:center;padding:1rem;margin-top:2rem;font-size:.82rem;">
    <p>&copy; {new Date().getFullYear()} Oregon Knights of Pythias &middot; <a href="/admin" style="color:#f5a71c;opacity:.85;">Admin</a></p>
  </footer>
</body>
</html>
